.start-image{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    width:100%;
    background: #fff;
    z-index: 100000000000000000;
}



.themes{
    position: fixed;
    top:0;
    bottom: 0;
    margin: auto;
    width:50%;
    background: skyblue;
    z-index: 100;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding: 50rpx;
    transform: translate3d(-100%,0,0);
    transition: transform 0.8s ease-out;
}
.themes .t-item{
    width:100%;
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    background: chartreuse;
    margin: 10rpx 0;
}
.button{
    width:60rpx;
    height:60rpx;
    position: fixed;
    right: 30rpx;
    bottom: 30rpx;
    border-radius: 8rpx 8rpx;
    background: lightblue;

    z-index: 100;
}


.swiper{
    height: 450rpx;
}
.swiper .s-item{
    height: 450rpx;
    position: relative;
}
.swiper .s-item .item-title{
    position: absolute;
    bottom: 0rpx;
    left: 10rpx;
    width:95%;
    height: 90rpx;
    font-family: "隶书";
    font-size: 12px;
    color:#fff;
    text-align: center;
    background: rgba(0, 0, 0, 0.3)
}

.news-list{
    box-sizing: border-box;
    width:100%;
}
.news-list .n-item{
    width:95%;
    margin: 0 auto;
    height: 100rpx;
    position: relative;
    border-bottom: 1px solid #999;
    padding:10rpx 0;
}
.news-list .n-item .n-title{
    width:80%;
    height: 100%;
    position: absolute;
    top:15rpx;
    left: 10rpx;
    bottom:0;
    font-family: "幼圆";
    font-size:16px;
}
.news-list .n-item .n-image{
    position: absolute;
    top: 0;
    right: 10rpx;
    bottom: 0;
    width:15%;
    height: 100%;
    
}